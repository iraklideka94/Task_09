<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#E5E5E5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security Screen"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="109dp"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginStart="105dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="Enter your passcode"
                android:textSize="20sp">

            </TextView>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="26dp"
        android:padding="5dp"
        android:layout_marginEnd="93dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/first_btn"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/btn_style">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/second_btn"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="47dp"
            android:background="@drawable/btn_style">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/third_btn"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="47dp"
            android:background="@drawable/btn_style">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fourth_btn"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="47dp"
            android:background="@drawable/btn_style">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num1_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="32dp"
                android:text="1"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num2_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="43dp"
                android:text="2"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num3_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="43dp"
                android:text="3"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num4_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="32dp"
                android:text="4"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num5_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="43dp"
                android:text="5"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num6_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="43dp"
                android:text="6"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num7_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="32dp"
                android:text="7"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num8_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="43dp"
                android:text="8"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num9_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="43dp"
                android:text="9"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/fingerPrint_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_baseline_fingerprint_24"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatImageButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num0_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="43dp"
                android:text="0"
                android:textSize="32sp"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/backSpace_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="43dp"
                android:textSize="32sp"
                android:src="@drawable/ic_baseline_backspace_24"
                android:background="@drawable/num_btn_style">
            </androidx.appcompat.widget.AppCompatImageButton>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forgot_pas_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:layout_marginStart="130dp"
        android:layout_marginTop="50dp">
    </androidx.appcompat.widget.AppCompatTextView>
</LinearLayout>
